{
    "launch_path": "/index.html",
    "installs_allowed_from": [
        "*"
    ],
    "version": "1.3",
    "name": "drkSimon",
    "description": "The famous electronic game of th 80's simon as Free Software.",
    "developer": {
        "name": "Philippe Bousquet",
        "url": "http://darken33.free.fr"
    },
    "orientation": ["portrait"],
